{
  "displayName": "BLE + Wi-Fi Foot Traffic Dashboard",
  "dataSources": [
    {
      "name": "FootTrafficData",
      "type": "GOOGLE_SHEETS",
      "fields": [
        {
          "name": "timestamp",
          "dataType": "NUMBER"
        },
        {
          "name": "datetime",
          "dataType": "TEXT"
        },
        {
          "name": "mac_hash",
          "dataType": "TEXT"
        },
        {
          "name": "rssi",
          "dataType": "NUMBER"
        },
        {
          "name": "sensor",
          "dataType": "TEXT"
        },
        {
          "name": "type",
          "dataType": "TEXT"
        },
        {
          "name": "lat",
          "dataType": "NUMBER"
        },
        {
          "name": "lon",
          "dataType": "NUMBER"
        }
      ]
    }
  ],
  "charts": [
    {
      "type": "BAR",
      "title": "Daily Scan Volume by Sensor",
      "dimensions": [
        "sensor",
        "datetime"
      ],
      "metrics": [
        {
          "aggregation": "COUNT_DISTINCT",
          "field": "mac_hash"
        }
      ]
    },
    {
      "type": "LINE",
      "title": "Signal Strength Trend (RSSI)",
      "dimensions": [
        "datetime"
      ],
      "metrics": [
        {
          "aggregation": "AVG",
          "field": "rssi"
        }
      ],
      "filter": {
        "field": "type",
        "value": "ble"
      }
    },
    {
      "type": "TABLE",
      "title": "Recent Scans",
      "dimensions": [
        "datetime",
        "sensor",
        "mac_hash",
        "rssi",
        "type"
      ]
    },
    {
      "type": "GEO",
      "title": "GPS Scan Heatmap",
      "latField": "lat",
      "lonField": "lon",
      "sizeField": "rssi",
      "colorField": "type"
    }
  ],
  "filters": [
    {
      "field": "sensor",
      "type": "DROPDOWN"
    },
    {
      "field": "type",
      "type": "DROPDOWN",
      "values": [
        "ble",
        "wifi"
      ]
    }
  ],
  "theme": "DARK"
}